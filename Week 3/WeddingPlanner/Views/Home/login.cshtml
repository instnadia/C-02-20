@model Login
<h3>Login</h3>
<form asp-action="login" asp-controller="Home" method="post">
  <div class="form-group">
        <span asp-validation-for="LoginEmail"></span>
        <label asp-for="LoginEmail">Email address</label>
        <input asp-for="LoginEmail" class="form-control" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
        <span asp-validation-for="LoginPassword"></span>
        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword" type="password" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-success">Login</button>
</form>