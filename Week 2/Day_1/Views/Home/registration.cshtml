@model User

<form asp-action="registration" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="fname"></span>
        <label asp-for="fname"></label>
        <input asp-for="fname">
    </div>
    <div class="form-group">
        <span asp-validation-for="lname"></span>
        <label asp-for="lname">
        </label>
        <input asp-for="lname">
    </div>
    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="email">
        </label>
            <input asp-for="email">
    </div>
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password">
        </label>
            <input asp-for="password">
    </div>
    <div class="form-group">
        <span asp-validation-for="confirm_password"></span>
        <label asp-for="confirm_password">
        </label>
            <input asp-for="confirm_password">
    </div>
    <button>Register!</button>
</form>